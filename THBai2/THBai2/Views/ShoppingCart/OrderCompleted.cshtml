@model int

@{
    ViewData["Title"] = "Order Completed";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f5f5f5;
        color: #333;
        padding: 30px;
    }

    .order-completed-container {
        max-width: 600px;
        margin-top: 150px ;
        background: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 1px 5px rgba(0, 0, 0, 0.1);
        text-align: center;

    }

        .order-completed-container h2 {
            font-size: 28px;
            color: #28a745;
            font-weight: 600;
        }

        .order-completed-container p {
            font-size: 16px;
            color: #555;
            margin-top: 10px;
        }

        .order-completed-container .btn-back {
            background-color: #ee4d2d;
            color: white;
            padding: 12px 24px;
            border-radius: 4px;
            font-weight: 500;
            text-decoration: none;
            display: inline-block;
            margin-top: 20px;
            transition: all 0.3s;
        }

            .order-completed-container .btn-back:hover {
                background-color: #e3381a;
            }
</style>

<div class="order-completed-container">
    <h2>Order Completed</h2>
    <p>Your order with ID <strong>#@Model</strong> has been placed successfully.</p>
    <p>Thank you for shopping with us! We will process your order and notify you once it's ready.</p>
    <a href="@Url.Action("Index", "Product")" class="btn-back">Back to Shopping</a>
</div>
