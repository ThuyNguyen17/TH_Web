@model ShoppingCart
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f5f5f5;
        color: #333;
    }

    .cart-container {
        max-width: 1200px;
        margin: 30px auto;
        padding: 20px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 1px 5px rgba(0, 0, 0, 0.1);
    }

    .cart-header {
        display: flex;
        align-items: center;
        padding: 15px 0;
        border-bottom: 1px solid #f2f2f2;
        margin-bottom: 20px;
    }

    .cart-title {
        font-size: 24px;
        font-weight: 600;
        color: #ee4d2d;
        margin: 0;
    }

    .cart-icon {
        margin-right: 10px;
        color: #ee4d2d;
    }

    .table {
        width: 100%;
        margin-bottom: 20px;
        background-color: #fff;
        border-collapse: collapse;
    }

        .table thead th {
            background-color: #fafafa;
            color: #888;
            padding: 15px;
            text-align: left;
            font-weight: 500;
            border-bottom: 1px solid #f2f2f2;
        }

        .table tbody td {
            padding: 15px;
            vertical-align: middle;
            border-bottom: 1px solid #f2f2f2;
        }

    .product-info {
        display: flex;
        align-items: center;
    }

    .product-image {
        width: 80px;
        height: 80px;
        object-fit: contain;
        border: 1px solid #f2f2f2;
        margin-right: 15px;
    }

    .quantity-control {
        display: flex;
        align-items: center;
    }

    .quantity-btn {
        width: 32px;
        height: 32px;
        background: #fff;
        border: 1px solid #ddd;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        user-select: none;
    }

        .quantity-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

    .quantity-input {
        width: 50px;
        height: 32px;
        text-align: center;
        border: 1px solid #ddd;
        border-left: none;
        border-right: none;
        outline: none;
    }

    .remove-btn {
        color: #ee4d2d;
        background: none;
        border: none;
        cursor: pointer;
        font-size: 18px;
    }

    .price {
        color: #ee4d2d;
        font-weight: 500;
    }

    .cart-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        background: #fafafa;
        border-radius: 4px;
        margin-top: 30px;
    }

    .total-price {
        font-size: 20px;
        color: #ee4d2d;
        font-weight: 600;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
    }

    .btn {
        padding: 12px 24px;
        border-radius: 4px;
        font-weight: 500;
        text-transform: uppercase;
        transition: all 0.2s;
    }

    .btn-continue {
        background: #fff;
        border: 1px solid #ee4d2d;
        color: #ee4d2d;
    }

        .btn-continue:hover {
            background: #fff6f5;
        }

    .btn-checkout {
        background: #ee4d2d;
        color: #fff;
        border: none;
    }

        .btn-checkout:hover {
            background: #e3381a;
        }

    .empty-cart {
        text-align: center;
        padding: 50px 0;
    }

    .empty-cart-icon {
        font-size: 60px;
        color: #ddd;
        margin-bottom: 20px;
    }

    .empty-cart-text {
        font-size: 18px;
        color: #888;
        margin-bottom: 20px;
    }

    .btn-back {
        background: #ee4d2d;
        color: #fff;
        padding: 12px 24px;
        border-radius: 4px;
        text-decoration: none;
        display: inline-block;
    }
</style>

<div class="cart-container">
    <div class="cart-header">
        <i class="bi bi-cart-fill cart-icon"></i>
        <h2 class="cart-title">Your Shopping Cart</h2>
    </div>

    @if (Model.Items.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 40%">Product</th>
                    <th style="width: 20%">Quantity</th>
                    <th style="width: 15%">Price</th>
                    <th style="width: 15%">Total</th>
                    <th style="width: 10%">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            <div class="product-info">
                                <div>
                                    <div style="font-weight: 500;">@item.Name</div>
                                    <div style="font-size: 13px; color: #888;">SKU: @item.ProductId</div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="quantity-control">
                                <button class="quantity-btn"
                                        onclick="updateQuantity('@item.ProductId', @(item.Quantity - 1))"
                                @(item.Quantity == 1 ? "disabled" : "")>
                                    -
                                </button>
                                <input type="text" class="quantity-input" value="@item.Quantity" readonly>
                                <button class="quantity-btn"
                                        onclick="updateQuantity('@item.ProductId', @(item.Quantity + 1))">
                                    +
                                </button>
                            </div>
                        </td>
                        <td class="price">@item.Price.ToString("N0") ₫</td>
                        <td class="price">@((item.Price * item.Quantity).ToString("N0")) ₫</td>
                        <td>
                            <button class="remove-btn" onclick="removeItem('@item.ProductId')">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="cart-footer">
            <div>
                <span>Total (@Model.Items.Count items):</span>
                <span class="total-price">@Model.Items.Sum(i => i.Price * i.Quantity).ToString("N0") ₫</span>
            </div>
            <div class="action-buttons">
                <a asp-controller="Product" asp-action="Index" class="btn btn-continue">Continue Shopping</a>
                <a asp-controller="ShoppingCart" asp-action="Checkout" class="btn btn-checkout">Checkout</a>
            </div>
        </div>
    }
    else
    {
        <div class="empty-cart">
            <div class="empty-cart-icon">
                <i class="bi bi-cart-x"></i>
            </div>
            <div class="empty-cart-text">Your cart is empty</div>
            <a asp-controller="Product" asp-action="Index" class="btn-back">Back to Shopping</a>
        </div>
    }
</div>

<script>
    function updateQuantity(productId, newQuantity) {
        window.location.href = `/ShoppingCart/UpdateQuantity?productId=${productId}&quantity=${newQuantity}`;
    }

    function removeItem(productId) {
        if (confirm('Are you sure you want to remove this item?')) {
            window.location.href = `/ShoppingCart/RemoveFromCart?productId=${productId}`;
        }
    }
</script>