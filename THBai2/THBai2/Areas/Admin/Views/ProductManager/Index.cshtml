@{
    ViewData["Title"] = "Home Page";
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<THBai2.Models.Product>

<h2 class="text-center my-4 w-100">Products</h2>
<a asp-area="Admin" asp-controller="ProductManager" asp-action="Add" class="btn bg-warning mb-4">
    <i class="fas fa-plus"></i> Add new item
</a>
<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Image</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Description</td>
                    <td><img src="@product.ImageUrl" class="product-image" /></td>
                    <td>@product.Category?.Name</td>
                    <td>
                        <a asp-area="Admin" asp-controller="ProductManager" asp-action="Display" asp-route-id="@product.Id" class="btn btn-info btn-sm">View</a>
                        <a asp-area="Admin" asp-controller="ProductManager" asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-area="Admin" asp-controller="ProductManager" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-warning btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
